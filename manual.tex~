    \textbf{Código de inventario}   & $\Box$ & \textbf{Nombre}      & $\Box$ \\ 
    \hline
    \textbf{Marca}                  & $\Box$ & \textbf{Modelo}      & $\Box$ \\
    \hline
    \textbf{Categoría}              & $\Box$ & \textbf{Tipo}       & $\Box$ \\
    \hline
    \textbf{Unidad de uso}*         & $\Box$ & \textbf{Precio}*    & $\Box$ \\
    \hline
    \textbf{Periodo de antelación}* & $\Box$ & \textbf{Uso potencial 1} & $\Box$ \\
    \hline
    \textbf{Uso potencial 2}        & $\Box$ & \textbf{Uso potencial 3} & $\Box$ \\
